#!/bin/sh
PKG_PATH=$(python -c "from distutils.sysconfig import get_python_lib; print(get_python_lib())")
if [ -z "$VAR" ]; then
  "${VIRTUAL_ENV}/bin/uwsgi" --http-socket :5000 --venv "${VIRTUAL_ENV}" --pecan ${PKG_PATH}/anchor/config.py -p 4
else
  "/usr/bin/uwsgi" --http-socket :5000 --pecan ${PKG_PATH}/anchor/config.py -p 4
fi
